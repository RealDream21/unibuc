
@foreach(var article in ViewBag.Articles)
{
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title">@article.Title</h5>
        <p class="card-text">@article.Content</p>
        <a href="/Articles/Show/@article.Id" class="btn btn-primary">Arata articol</a>
        <a href="/Articles/Edit/@article.Id" class="btn btn-primary">Editeaza articol</a>
      </div>
    </div>
}